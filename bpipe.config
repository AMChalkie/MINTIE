executor="torque"
concurrency=120
walltime="20:00:00"

mem_param="mem"
memory="8"
proc_mode=1
usePollerFileWatcher=true

modules="trimmomatic fastx-toolkit R/3.3.2 samtools bedtools bedops star salmon"

commands {
    SOAPassemble {
        procs="8"
        memory="128"
    }

    align_contigs_against_genome {
        procs="8"
        memory="64"
    }

    align_contigs_against_transcriptome {
        procs="8"
        memory="64"
    }

    run_salmon {
        procs="8"
        memory="128"
    }

    run_diffsplice {
        procs="8"
        memory="256"
    }

    align_contigs_to_supertranscript {
        procs="8"
        memory="64"
    }

    star_align {
        procs="8"
        memory="12"
    }
}
